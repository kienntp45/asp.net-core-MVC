@model IEnumerable<asm.Models.cartItem>

@{
    var total = ViewBag.Total;
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/dash/css/kechan.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">


<table class="table">
    <thead>
        <tr>
            <th scope="col">  STT</th>
            <th scope="col">    @Html.DisplayNameFor(model => model.Name)</th>
            <th scope="col">    @Html.DisplayNameFor(model => model.Image)</th>
            <th scope="col">   @Html.DisplayNameFor(model => model.Price)</th>
            <th scope="col">  @Html.DisplayNameFor(model => model.Quantity)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @{
            int index = 1;
            foreach (var item in Model)
            {
              
                <tr>
                    <th scope="row">@index</th>
                    <td>     @Html.DisplayFor(modelItem => item.Name)</td>
                    <td>  <img src=" @Html.DisplayFor(modelItem => item.Image)" class="img-thumbnail" alt=" @Html.DisplayFor(modelItem => item.Name)"></td>
                    <td>   @item.Price.ToString("n0") VND</td>
                    <td><a class="kechan" asp-controller="cartItems" asp-action="tru" asp-route-id="@item.ProductId">-&nbsp; </a> @item.Quantity<a class="kechan" asp-controller="cartItems" asp-action="cong" asp-route-id="@item.ProductId">&nbsp;  +</a>  </td>
                    <td>
                    <td>
                     
                        <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
                    </td>
                    </td>

                </tr>
               
                index++;
            }
            <tr>
                <td>Thành tiền</td>
                <td>@total.ToString("n0") VND</td>
            </tr>
        }

    </tbody>

</table>
<a class="kechan" asp-action="Index" asp-controller="Home">Back</a>
<a asp-controller="Bill" asp-action="Index">Thanh toán </a>