<div class="section group">
    @{
        foreach (var x in product)
        {

            <div class="row mr-5">

                <div class="grid_1_of_4 images_1_of_4 mr-5">

                    <a href=""><img src="@x.Image" alt="@x.Name" /></a>

                    <h2>@x.Name </h2>
                    <div class="price-details">
                        <div class="price-number">
                            <p><span class="rupees">@x.Price.ToString("n0") VND </span> <span>SL:@x.Quantity</span></p>

                        </div>
                        <div class="add-cart">

                            <h4>  <a asp-controller="cartItems" asp-action="Create" asp-route-id="@x.Id">Add to Cart</a></h4>


                        </div>
                        <div class="clear"></div>
                    </div>

                </div>

            </div>

        }
    }
</div>

@{
    if (@messAddCart == "Đăng nhập để mua hàng")
    {


        <script>
            swal("Opps!", "Đăng nhập để mua hàng", "error");
        </script>
    }

}